<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShoppingCartActivity">

    <TextView
        android:id="@+id/shopItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/shopItemTotal"
        android:layout_marginTop="31dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="66dp" />


    <TextView
        android:id="@+id/shopItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shopItemQuantity"
        android:layout_marginStart="131dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="92dp" />

    <EditText
        android:id="@+id/shopItemQuantity"
        android:layout_width="49dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/shopItemName"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="66dp" />

    <ImageView
        android:id="@+id/shopItemPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>