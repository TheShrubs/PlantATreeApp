<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theshrubs.plantatree"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.theshrubs.plantatree.activity.AddItemToCartActivity" />
        <activity android:name="com.example.theshrubs.plantatree.activity.UserLoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.theshrubs.plantatree.activity.UserRegistrationActivity" />
        <activity android:name="com.example.theshrubs.plantatree.activity.ViewItemActivity" />
        <activity
            android:name="com.example.theshrubs.plantatree.activity.ShoppingCartActivity"
            android:windowSoftInputMode="stateVisible|adjustNothing" />
        <activity
            android:name="com.example.theshrubs.plantatree.activity.LandingPageActivity"
            android:parentActivityName="com.example.theshrubs.plantatree.activity.LandingPageActivity"
            android:windowSoftInputMode="stateVisible|adjustNothing" />
        <activity android:name="com.example.theshrubs.plantatree.activity.AddressActivity" />
        <activity android:name="com.example.theshrubs.plantatree.activity.CartTotalActivity" />
        <activity android:name="com.example.theshrubs.plantatree.activity.OrderConfirmActivity" />
        <activity
            android:name="com.example.theshrubs.plantatree.activity.PaymentActivity"
            android:label="@string/title_activity_payment"
            android:theme="@style/AppTheme" />
        <activity android:name="com.example.theshrubs.plantatree.activity.PaymentActivity$ShoppingCartActivity" />

        <provider
            android:name="com.amitshekhar.DebugDBInitProvider"
            android:authorities="com.example.theshrubs.plantatree.DebugDBInitProvider"
            android:enabled="true"
            android:exported="false" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.theshrubs.plantatree.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>