<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/visualize_view_group"
    android:orientation="horizontal"
    tools:context=".activity.VisualizationActivity">

    <ImageView
        android:id="@+id/housePhoto"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="55dp" />


    <ImageView
        android:id="@+id/vis_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginBottom="1dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/drag_vis1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="264dp"
        android:layout_marginLeft="264dp"
        android:layout_marginTop="313dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/drag_vis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="74dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/drag_vis3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/drag_vis4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/drag_vis5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="254dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/trash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/vis_image"
        android:layout_alignEnd="@+id/drag_vis4"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/rubbish_bin" />

</RelativeLayout>