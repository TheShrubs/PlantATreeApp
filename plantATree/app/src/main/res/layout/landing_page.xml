<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LandingPageActivity"
    android:background="@drawable/background2">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/landing_Navigation"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@android:color/holo_green_dark"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="519dp" />


    <ListView
        android:id="@+id/treeList"
        android:layout_width="341dp"
        android:layout_height="404dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"/>

    <EditText
        android:id="@+id/search_text"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/treeList"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Search Keyword"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/search_tree"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="79dp"
        app:srcCompat="@drawable/magnifying_glass" />

</RelativeLayout>