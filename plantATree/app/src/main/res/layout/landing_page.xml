<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".activity.LandingPageActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_naviation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorNavigationBottom"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_main" />


    <ListView
        android:id="@+id/treeList"
        android:layout_width="330dp"
        android:layout_height="367dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_text" />

    <ImageView
        android:id="@+id/search_tree"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_text"
        app:layout_constraintEnd_toEndOf="@+id/search_text"
        app:layout_constraintTop_toTopOf="@+id/search_text"
        app:srcCompat="@drawable/magnifying_glass" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Search Keyword"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/treeList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/Sale"
        android:text=" Sale! Buy 10 trees and get free shipping!"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/treeList"
        app:layout_constraintStart_toStartOf="@+id/treeList"
        app:layout_constraintTop_toBottomOf="@+id/treeList" />

    <Button
        android:id="@+id/priceSortButton"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:text="Sort by Price"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/treeList"
        app:layout_constraintTop_toTopOf="@+id/search_text" />

</android.support.constraint.ConstraintLayout>