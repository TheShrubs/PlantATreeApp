<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViewAllCartContentsActivity">

    <ImageView
        android:id="@+id/shopItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/shopItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/shopItemImage"
        android:layout_marginStart="100dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="66dp" />


    <TextView
        android:id="@+id/shopItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shopItemImage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="92dp" />

    <EditText
        android:id="@+id/shopItemQuantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shopItemImage"
        android:layout_alignStart="@+id/shopItemName"
        android:ems="10"
        android:inputType="number"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/shopItemImage"
        android:layout_marginEnd="65dp"
        android:text="Total" />

</RelativeLayout>