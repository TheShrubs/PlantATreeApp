<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background4"
    tools:context=".activity.ViewingTreeActivity">

    <ImageView
        android:id="@+id/housePhoto"
        android:layout_width="347dp"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="196dp"
        android:layout_height="27dp"
        android:layout_alignStart="@+id/housePhoto"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="79dp"
        android:layout_marginBottom="131dp"
        android:gravity="center"
        android:text="Drag and drop tree onto photo"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/itemDrop"
        android:layout_width="96dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="241dp"
        android:layout_marginRight="241dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>