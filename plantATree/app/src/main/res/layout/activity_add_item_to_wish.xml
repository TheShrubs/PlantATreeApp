<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddItemToCartActivity"
    android:background="@drawable/background3">

    <Button
        android:id="@+id/TreeWishlistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@android:color/holo_green_dark"
        android:text="Add to WIshlist"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="473dp" />

    <TextView
        android:id="@+id/treeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="214dp"
        android:layout_marginStart="54dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/treePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemQuantity"
        android:layout_alignStart="@+id/treeName"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/treeShip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/treeName"
        android:layout_marginBottom="133dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="274dp" />

    <EditText
        android:id="@+id/itemQuantity"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/treeName"
        android:layout_marginTop="-214dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="262dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="257dp"
        android:text="Product Details"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/treeTotal"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/itemQuantity"
        android:layout_alignTop="@+id/treeShip"
        android:text="Tree Total"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/treeName"
        android:layout_toEndOf="@+id/textView6"
        android:text="Quantity"
        android:textColor="@android:color/background_dark" />

    <ImageView
        android:id="@+id/addPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>